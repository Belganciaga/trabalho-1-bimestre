<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="600dp"
        android:layout_height="94dp"
        android:ellipsize="middle"
        android:fontFamily="casual"
        android:includeFontPadding="true"
        android:text="Thais Alexandra Vitoria Rodrigues            RA: 40877224094"
        android:textSize="30dp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <Button
        android:id="@+id/btnCuriosidade1"
        android:layout_width="480dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:text="Curiosidade 1"
        app:layout_constraintBottom_toTopOf="@+id/btnCuriosidade2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCuriosidade2"
        android:layout_width="480dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:text="Curiosidade 2"
        app:layout_constraintBottom_toTopOf="@+id/btnCuriosidade3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCuriosidade4"
        android:layout_width="480dp"
        android:layout_height="80dp"
        android:layout_marginBottom="156dp"
        android:text="Curiosidade 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnCuriosidade3"
        android:layout_width="480dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:text="Curiosidade 3"
        app:layout_constraintBottom_toTopOf="@+id/btnCuriosidade4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="479dp"
        android:layout_height="106dp"
        android:ellipsize="middle"
        android:fontFamily="casual"
        android:includeFontPadding="true"
        android:text="PARQUE MUNICIPAL DE BH"
        android:textSize="50dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/btnCuriosidade1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="159dp"
        android:layout_height="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>